<project xmlns="http://maven.apache.org/POM/4.1.0">
    <modelVersion>4.0.0</modelVersion>

    <groupId>xyz.vkgk</groupId>
    <artifactId>vppps</artifactId>
    <version>1</version>

    <properties>
        <kotlin.version>2.1.21</kotlin.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.jetbrains.kotlin</groupId>
            <artifactId>kotlin-stdlib-jdk8</artifactId>
            <version>${kotlin.version}</version>
        </dependency>
        <dependency>
            <groupId>starsector</groupId>
            <artifactId>starfarer.api</artifactId>
            <systemPath>${basedir}/../../starsector-core/starfarer.api.jar</systemPath>
            <version>.</version>
            <scope>system</scope>
        </dependency>
        <dependency>
            <groupId>org.lwjgl</groupId>
            <artifactId>lwjgl</artifactId>
            <systemPath>${basedir}/../../starsector-core/lwjgl.jar</systemPath>
            <version>.</version>
            <scope>system</scope>
        </dependency>
        <dependency>
            <groupId>org.lwjgl</groupId>
            <artifactId>lwjgl.util</artifactId>
            <systemPath>${basedir}/../../starsector-core/lwjgl_util.jar</systemPath>
            <version>.</version>
            <scope>system</scope>
        </dependency>
        <dependency>
            <groupId>lazywizard</groupId>
            <artifactId>LazyLib-Kotlin</artifactId>
            <systemPath>${basedir}/../lw_lazylib/jars/LazyLib-Kotlin.jar</systemPath>
            <version>.</version>
            <scope>system</scope>
        </dependency>
        <dependency>
            <groupId>lazywizard</groupId>
            <artifactId>LazyLib</artifactId>
            <systemPath>${basedir}/../lw_lazylib/jars/LazyLib.jar</systemPath>
            <version>.</version>
            <scope>system</scope>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>src</sourceDirectory>
        <outputDirectory>out</outputDirectory>
        <plugins>
            <plugin>
                <groupId>org.jetbrains.kotlin</groupId>
                <artifactId>kotlin-maven-plugin</artifactId>
                <version>${kotlin.version}</version>
                <executions>
                    <execution>
                        <id>compile</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <jvmTarget>1.8</jvmTarget>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.6</version>
                <configuration>
                    <finalName>vppps</finalName>
                    <outputDirectory>${basedir}/jars</outputDirectory>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>